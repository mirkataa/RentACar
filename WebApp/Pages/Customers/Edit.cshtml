@page
@model WebApp.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирай</h1>

<h4>Клиенти</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label">Име</label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label">Фамилия</label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label">Имейл</label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Phone" class="control-label">Телефонен номер</label>
                <input asp-for="Customer.Phone" class="form-control" />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Car" class="control-label">Кола</label>
                <input asp-for="Customer.Car" class="form-control" />
                <span asp-validation-for="Customer.Car" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.From" class="control-label">Дата на наемане</label>
                <input asp-for="Customer.From" class="form-control" />
                <span asp-validation-for="Customer.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.To" class="control-label">Дата на освобождаване</label>
                <input asp-for="Customer.To" class="form-control" />
                <span asp-validation-for="Customer.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Обратно към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
