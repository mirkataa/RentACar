@page
@model WebApp.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Клиенти</h1>

<p>
    <a asp-page="Create">Добавяне на нов клиент</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].To)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.Customer)
      {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td>
                    @{
                        // Retrieve the Car object associated with the current customer's Car foreign key
                        var car = await Model.GetCarAsync(item.Car);

                        // Display the Car Registration number instead of its Id
                        @car.RgNum  
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактирай</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Детайли</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Изтрий</a>
            </td>
        </tr>
      }
    </tbody>
</table>
